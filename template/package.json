{
    "name": "{{ name }}",
    "version": "0.1.0",
    "description": "{{ description }}",
    "author": "{{ author }}",
    "private": true,
    "scripts": {
        "clean": "rimraf dist",
        "dev": "webpack-dev-server --config conf/webpack.config.js --content-base src --colors --port {{ port }} --open",
        "build": "webpack --config conf/webpack.config.js --colors",
        "prod": "http-server dist -p {{ port }} -g -o"{{#unit}},
        "unit": "karma start conf/karma.conf.js --single-run"{{/unit}}{{#e2e}},
        "e2e": ""{{/e2e}}{{#if_or unit e2e}},
        "test": "{{#unit}}npm run unit{{/unit}}{{#unit}}{{#e2e}} && {{/e2e}}{{/unit}}{{#e2e}}npm run e2e{{/e2e}}"{{/if_or}}{{#tslint}},
        "tslint": "tslint -c conf/tslint.json -e 'src/**/*.d.ts' -e 'test/unit/**/*.d.ts' -s node_modules/custom-tslint-formatters/formatters -t grouped 'src/**/*.ts' 'test/unit/**/*.ts' 'test/e2e/*.ts'"{{/tslint}}
    },
    "dependencies": {
        "vue": "^2.3.2",
        "vue-router": "^2.5.3"
    },
    "devDependencies": {
        "@types/node": "^7.0.16",
        "awesome-typescript-loader": "^3.1.3",
        "compression-webpack-plugin": "^0.4.0",
        "html-webpack-plugin": "^2.28.0",
        "http-server": "^0.10.0",
        "rimraf": "^2.6.1",
        "typescript": "^2.3.2",
        "vue-class-component": "^5.0.1",
        "vue-template-compiler": "^2.3.2",
        "vue-template-loader": "^0.3.1",
        "webpack": "^2.4.1",
        "webpack-dev-server": "^2.4.5"{{#tslint}},
        "custom-tslint-formatters": "^2.1.0",
        "tslint": "^5.1.0",
        "tslint-config-standard": "^5.0.2",
        "tslint-loader": "^3.5.3"{{/tslint}}
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ulaval/vuejs-typescript-template.git"
    },
    "engines": {
        "node": ">= 6.0.0",
        "npm": ">= 3.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 10"
    ],
    "license": "Apache-2.0"
}