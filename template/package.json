{
    "name": "{{ name }}",
    "version": "0.1.0",
    "description": "{{ description }}",
    "author": "{{ author }}",
    "private": false,
    "scripts": {
        "clean": "rimraf dist",
        "tsc": "tsc{{#if_eq devenv "webpack"}} && copyfiles -u 1 ./src/**/*.json dist && copyfiles -u 1 ./src/**/*.html dist && copyfiles -u 1 ./src/**/*.scss dist && copyfiles -u 1 ./src/public/**/*.* dist && npm run assetsToDist{{/if_eq}}"{{#if_eq devenv "webpack"}},
        "dev": "webpack-dev-server --config conf/webpack.config.js --content-base src --colors --port {{ port }} --open --history-api-fallback",
        "build": "webpack --env.prod --config conf/webpack.config.js --colors --optimize-minimize",
        "prod": "http-server dist -p {{ port }} -g -o"{{#unit}},
        "unit": "karma start conf/karma.conf.js --browsers PhantomJS --single-run",
        "unitall": "karma start conf/karma.conf.js --single-run"{{/unit}}{{#e2e}},
        "e2e": "node tests/e2e/index.js"{{/e2e}}{{#if_or unit e2e}},
        "test": "{{#unit}}npm run unitall{{/unit}}{{#unit}}{{#e2e}} && {{/e2e}}{{/unit}}{{#e2e}}npm run e2e{{/e2e}}"{{/if_or}}{{#tslint}},
        "tslint": "tslint -c conf/tslint.json -e 'src/**/*.d.ts' {{#unit}}-e 'tests/unit/**/*.d.ts'{{/unit}} -s node_modules/custom-tslint-formatters/formatters -t grouped 'src/**/*.ts' {{#unit}}'tests/unit/**/*.ts'{{/unit}} 'tests/e2e/*.ts'"{{/tslint}}{{#stylelint}},
        "stylelint": "stylelint \"src/**/*.css\" \"src/**/*.scss\" --config conf/stylelint.json"{{/stylelint}}{{/if_eq}}
    },
    "dependencies": {
    },
    "devDependencies": {
        "@types/es6-promise": "^0.0.32",
        "es6-promise": "^4.1.0",
        "rimraf": "^2.6.1"{{#if_eq devenv "webpack"}},
        "@types/node": "^7.0.16",
        "awesome-typescript-loader": "^3.4.1",
        "axios": "^0.17.1",
        "compression-webpack-plugin": "^0.4.0",
        "css-loader": "^0.28.1",
        "html-webpack-plugin": "^2.28.0",
        "http-server": "^0.10.0",
        "node-sass": "^4.5.2",
        "postcss-loader": "^2.0.9",
        "sass-loader": "^6.0.3",
        "style-loader": "^0.19.0",
        "svg-inline-loader": "^0.7.1",
        "typescript": "^2.6.2",
        "uglifyjs-webpack-plugin": "^0.4.3",
        "uglify-js": "^2.8.22",
        "url-loader": "^0.6.2",
        "vue": "^2.5.9",
        "vue-class-component": "^6.1.1",
        "vue-router": "^3.0.1",
        "vue-template-compiler": "^2.5.9",
        "vue-template-loader": "^0.3.1",
        "vuex": "^3.0.1",
        "webpack": "^2.4.1",
        "webpack-dev-server": "^2.4.5"{{#tslint}},
        "custom-tslint-formatters": "^2.1.0",
        "tslint": "^5.1.0",
        "tslint-config-standard": "^5.0.2",
        "tslint-loader": "^3.5.3"{{/tslint}}{{#stylelint}},
        "stylelint": "^7.10.1",
        "stylelint-config-standard": "^16.0.0",
        "stylelint-scss": "^1.4.4",
        "stylelint-webpack-plugin": "^0.7.0"{{/stylelint}}{{#unit}},
        "@types/jasmine": "^2.5.47",
        "jasmine-core": "^2.4.1",
        "karma": "^1.4.1",
        "karma-chrome-launcher": "^2.1.1",
        "karma-firefox-launcher": "^1.0.1",
        "karma-jasmine": "^0.3.6",
        "karma-phantomjs-launcher": "^1.0.2",
        "karma-spec-reporter": "^0.0.26",
        "karma-webpack": "^2.0.2"{{/unit}}{{#e2e}},
        "chromedriver": "^2.27.2",
        "nightwatch": "^0.9.12",
        "selenium-server": "^3.0.1"{{/e2e}}{{#modul}},
        "@ulaval/modul-components": "^1.0.0-beta.4",
        "bundle-loader": "^0.5.5",
        "css-element-queries": "^0.4.0",
        "enquire.js": "^2.1.6",
        "file-loader": "^1.1.5",
        "moment": "^2.19.3",
        "popper.js": "^1.12.9", 
        "portal-vue": "~1.1.1",
        "vue-property-decorator": "^6.0.0",
        "vue-touch": "^2.0.0-beta.4"
        {{/modul}}{{/if_eq}}
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ulaval/vuejs-typescript-template.git"
    },
    "engines": {
        "node": ">= 6.0.0",
        "npm": ">= 3.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 10"
    ],
    "license": "Apache-2.0"
}